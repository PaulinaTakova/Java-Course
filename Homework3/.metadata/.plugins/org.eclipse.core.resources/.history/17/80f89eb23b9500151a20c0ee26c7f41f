import java.util.Scanner;

public class Sum {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		int a, sum;
		do {
			System.out.println("Enter a number:");
			a = sc.nextInt();
			sum = 0;
			sum += a;
		} while (a != 0);

		System.out.println("The sum is: " + sum);
	}
}

import java.util.Scanner;

public class Sum {

	public static void main(String[] args) {
		int a =1;
		
		while(a != 0){
			Scanner sc = new Scanner(System.in);
			System.out.println("Enter a number:");
			a = sc.nextInt();
			int sum = 0;
			sum += a;
			System.out.println("The sum is: " + sum);
			
			sc.close();
		}
		
	}

}

import java.util.Scanner;

public class Sum {

	public static void main(String[] args) {
		int i = 0;
		for( i = 0; i!=0; i++){
			Scanner sc = new Scanner(System.in);
			System.out.println("Enter a number:");
			int a = sc.nextInt();
			int sum = 0;
			sum += a;
			System.out.println("The sum is: " + sum);
			
			sc.close();
		}
		
	}

}

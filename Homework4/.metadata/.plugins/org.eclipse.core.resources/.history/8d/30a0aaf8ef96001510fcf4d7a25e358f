
public class From30To1 {

	public static void main(String[] args) {
		
		int[] arr = new int[30];
		int[] arr2 = new int[arr.length];
		
		for (int i = 0; i < arr.length; i++) {
			arr[i] = i + 1;
		}
		
		for (int i = 0; i < arr2.length; i++){
			arr2[arr2.length-i-1] = arr[i];
		}
		
		for (int i = 0; i <= 6; i++) {
			System.out.print(arr2[i] + " ");
		}
		System.out.println();
		for (int i = 0; i <= 12; i++) {
			System.out.print(arr[i] + " ");
		}
		System.out.println();
		for (int i = 0; i <= 18; i++) {
			System.out.print(arr[i] + " ");
		}
		System.out.println();
		for (int i = 0; i <= 24; i++) {
			System.out.print(arr[i] + " ");
		}
		System.out.println();
		for (int i = 0; i < 30; i++) {
			System.out.print(arr[i] + " ");
		}

	}

}

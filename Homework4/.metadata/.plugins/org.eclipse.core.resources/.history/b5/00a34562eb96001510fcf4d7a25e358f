
public class From30To1 {

	public static void main(String[] args) {
		
		int[] arr = new int[30];
		
		for (int i = 0; i < arr.length; i++) {
			arr[i] = i;
		}
		
		for (int i = 0; i < arr.length; i++) {
			int a = arr[arr.length-i];
			arr[arr.length-i] = arr[i];
			arr[i] = a;
			System.out.print(arr[i] + " ");
		}

	}

}
